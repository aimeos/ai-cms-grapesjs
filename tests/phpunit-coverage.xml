<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="bootstrap.php">
	<testsuites>
		<testsuite name="MShop suite">
			<directory>MShop/</directory>
		</testsuite>
		<testsuite name="Controller suite">
			<directory>Controller/</directory>
		</testsuite>
		<testsuite name="Admin JQAdm suite">
			<directory>Admin/</directory>
		</testsuite>
	</testsuites>
		<testsuite name="Client HTML suite">
			<directory>Client/</directory>
		</testsuite>
		<testsuite name="Client JSON API suite">
			<directory>Client/</directory>
		</testsuite>
	<filter>
		<whitelist>
			<directory suffix=".php">../src</directory>
		</whitelist>
	</filter>
	<logging>
		<log type="coverage-clover" target="coverage.xml"/>
	</logging>
</phpunit>